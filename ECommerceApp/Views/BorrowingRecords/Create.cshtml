@model ECommerceApp.Models.BorrowingRecord

@{
    ViewData["Title"] = "Create Borrowing Record";
}

<h1>Create Borrowing Record</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Borrow Date -->
            <div class="form-group">
                <label asp-for="BorrowDate" class="control-label"></label>
                <input asp-for="BorrowDate" type="date" class="form-control" />
                <span asp-validation-for="BorrowDate" class="text-danger"></span>
            </div>

            <!-- Return Date -->
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" type="date" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>

            <!-- Member -->
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <select asp-for="MemberId" class="form-control" asp-items="ViewBag.Members"></select>
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>

            <!-- Book -->
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class="form-control" asp-items="ViewBag.Books"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
