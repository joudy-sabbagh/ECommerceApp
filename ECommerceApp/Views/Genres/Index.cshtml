@model IEnumerable<ECommerceApp.Models.Genre>

@{
    ViewData["Title"] = "Genres";
}

<h2>Genres</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Create New</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Genre Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GenreId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.GenreId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.GenreId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
